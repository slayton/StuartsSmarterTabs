{
    "name": "Stuart's Smarter Tabs",
    "description": "Preventing duplicate tabs!",
    "version": "1.0.2",
    "manifest_version": 3,
    "icons": {
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "background": {
        "service_worker": "js/service-worker.js",
        "type": "module"

    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "tabs",
        "contextMenus" 
    ],
    "host_permissions": [
       ],
    "commands": {
        "duplicate-tab": {
            "suggested_key": {
                "default": "Alt+Shift+D",
                "mac": "MacCtrl+Shift+D"
            },
            "description": "Duplicate current tab"
        }
    }
}